<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/cover_img"
        android:layout_width="120dp"
        android:layout_height="90dp"
        tools:src="@drawable/coverpic_default"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Body2"
        tools:text="Guy Kayaks Through Drainage Pipe"
        android:id="@+id/tv_title"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_alignTop="@id/cover_img"
        android:layout_toEndOf="@id/cover_img"
        android:layout_toRightOf="@id/cover_img" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_user_name"
        android:layout_alignStart="@id/tv_title"
        android:layout_below="@id/tv_title"
        tools:text="DailyPicksandFlicks"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Caption"
        tools:text="42714"
        android:id="@+id/tv_view_count"
        android:layout_alignBottom="@id/cover_img"
        android:layout_alignStart="@id/tv_title"
        android:layout_alignLeft="@id/tv_title" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/cover_img"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:gravity="center_vertical">


        <ImageView
            android:id="@+id/thumbup_img"
            android:layout_width="@dimen/item_little_icon"
            android:layout_height="@dimen/item_little_icon"
            android:src="@drawable/ic_thumb_up_black_24dp" />

        <TextView
            android:id="@+id/tv_thumbup_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            tools:text="68" />

        <ImageView
            android:id="@+id/reply_img"
            android:layout_width="@dimen/item_little_icon"
            android:layout_height="@dimen/item_little_icon"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:src="@drawable/ic_question_answer_black_24dp" />

        <TextView
            android:id="@+id/tv_reply_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            style="@style/TextAppearance.AppCompat.Caption"
            tools:text="335" />
    </LinearLayout>

</RelativeLayout>