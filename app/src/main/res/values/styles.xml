<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.BlackStatusBar" parent="AppTheme.NoActionBar" />

    <style name="Comment.Content" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">#666</item>
    </style>

    <style name="Comment.Time" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">#aaa</item>
    </style>
</resources>
